@using GoodMedicalApp.Domain.Models
@model IList<TypeMedicine>

<table border="1">
    <caption>Types of Medicines</caption>
    <tr>
        <th>Id</th>
        <th>Name of the type</th>
        <th colspan="2">Actions</th>
    </tr>
    @foreach (var entity in Model)
    {
        <tr>
            <td>@entity.Id</td>
            <td>@entity.Name</td>
            <td>@Html.ActionLink("Remove", "Remove", "TypeMedicine", new { id = entity.Id }, null)</td>
            <td>@Html.ActionLink("Edit", "FormUpdate", "TypeMedicine", new { id = entity.Id }, null)</td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Add medicine's type", "FormTypeMedicine", "TypeMedicine")
</div>


