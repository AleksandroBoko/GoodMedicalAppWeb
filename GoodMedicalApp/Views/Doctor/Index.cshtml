@using GoodMedicalApp.Domain.Models
@model IList<Doctor>

<table border="1">
    <caption>
        Doctors
    </caption>
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Qualification</th> 
        <th>Actions</th>       
    </tr>
    @foreach (var entity in Model)
    {
        <tr>
            <td>@entity.Id</td>
            <td>@entity.FirstName</td>
            <td>@entity.LastName</td>
            <td>@entity.Qualification</td>
            <td>@Html.ActionLink("Remove", "Remove", "Doctor", new { id = entity.Id }, null)</td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Add doctor", "FormDoctor", "Doctor")
</div>