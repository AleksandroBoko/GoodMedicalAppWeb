@using GoodMedicalApp.Domain.Models
@model IList<Room>

<table border="1">
        <caption>Rooms</caption>
    <tr>
        <th>Id</th>
        <th>Number of room</th>
        <th>Room</th>
    </tr>
    @foreach (var entity in Model)
    {
        <tr>
            <td>@entity.Id</td>
            <td>@entity.Number</td>
            <td>@Html.ActionLink("Remove", "Remove", "Room", new { id = entity.Id }, null)</td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Add room", "FormRoom", "Room")
</div>
